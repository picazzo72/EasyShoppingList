<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:minHeight="?android:attr/listPreferredItemHeightSmall">

        <TextView
            android:id="@+id/list_item_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_large_material"
            tools:ignore="PrivateResource"/>

        <TextView
            android:id="@+id/list_item_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:textStyle="italic"
            android:textSize="@dimen/abc_text_size_small_material"
            tools:ignore="PrivateResource" />
    </LinearLayout>

    <ImageView
        android:id="@+id/list_item_shopping_cart"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/detail_item_horizonal_padding"
        android:paddingRight="@dimen/detail_item_horizonal_padding"
        android:src="@drawable/ic_shopping_cart_black_24dp"
        android:contentDescription="@string/list_item_product_shopping_cart_icon"
        android:scaleType="center"
        android:gravity="end|center_vertical"/>
</LinearLayout>